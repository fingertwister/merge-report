<assembly>
	<id>${version}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>au.net.thehardings.merge-report:mergereport</include>
			</includes>
			<binaries>
				<outputDirectory>merge-report/lib</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
					  <scope>runtime</scope>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<outputDirectory>merge-report</outputDirectory>
			<directory>assembly/resources</directory>
			<fileMode>0555</fileMode>
			<includes>
				<include>*.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>merge-report/conf</outputDirectory>
			<directory>assembly/resources</directory>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
